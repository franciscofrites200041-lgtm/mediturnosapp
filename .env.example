# MediTurnos SaaS - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=mediturnos
POSTGRES_PASSWORD=your-super-secure-password-here
POSTGRES_DB=mediturnos

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=your-redis-password-here

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-min-32-chars-here
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# ENCRYPTION (for medical data)
# ===========================================
# Generate with: openssl rand -hex 16 (must be 32 chars)
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# API URL (for frontend)
# ===========================================
NEXT_PUBLIC_API_URL=https://yourdomain.com/api/v1
API_URL=http://api:3001

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# N8N INTEGRATION (optional)
# ===========================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# ===========================================
# EMAIL (optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
